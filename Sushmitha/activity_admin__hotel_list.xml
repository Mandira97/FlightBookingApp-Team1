<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin_HotelList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundbest"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/admin_top_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/topimage" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Hotel Information"
            android:textColor="@color/admincolor"
            android:textSize="20sp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/AdddHotel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle_admincolor"
            android:elevation="3dp"
            android:text="Add Hotel"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recylerviewID"
        android:layout_height="wrap_content"
        android:background="@color/backgroundbest"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
