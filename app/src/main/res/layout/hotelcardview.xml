<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    app:cardCornerRadius="50dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_hotelpic"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_uploadimage"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/hotelid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="ID"
                android:textColor="@color/admincolor"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/hotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Name"
                android:textColor="@color/admincolor"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/hotelCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Country"
                android:textColor="@color/admincolor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hotelProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="province"
                android:textColor="@color/admincolor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hotelCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="city"
                android:textColor="@color/admincolor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hotelPostalcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="postal code"
                android:textColor="@color/admincolor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hotelprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="price"
                android:textColor="@color/admincolor"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deleteicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>