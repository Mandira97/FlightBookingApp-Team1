<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="@color/colorGray0"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_register_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:gravity="end"
            android:textColor="@color/yellow"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your Account"
            android:layout_gravity="center"
            android:textColor="@color/yellow"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/signup_edt_firstname"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/fullWhite"
            android:elevation="5dp"
            android:hint="Your FirstName..."
            android:background="@drawable/btn"
            />
        <EditText
            android:id="@+id/signup_edt_lastname"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/fullWhite"
            android:elevation="5dp"
            android:hint="Your LastName..."
            android:background="@drawable/btn"
            />

        <EditText
            android:id="@+id/signup_edt_email"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/fullWhite"
            android:elevation="5dp"
            android:hint="Your Email..."
            android:background="@drawable/btn"
            />

        <EditText
            android:id="@+id/signup_edt_password"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="@color/fullWhite"
            android:elevation="5dp"
            android:hint="Your Password..."
            android:background="@drawable/btn"
            />

              <Button
            android:id="@+id/signup_btn"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:text="Sign Up"
            android:textColor="@color/fullWhite"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:background="@drawable/circle_yellow"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="By pressing Sign Up Button You agree our terms and conditions"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>
</LinearLayout>